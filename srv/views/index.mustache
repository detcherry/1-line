    <script type="text/javascript">
    $(document).ready(function() {
      $('.rightcontainer.signature .call').click(function() {
        //console.log(navigator.userAgent.toLowerCase());
        if(navigator.userAgent.toLowerCase().indexOf('chrome') !== -1) {
          window.open('https://chrome.google.com/webstore/detail/nbohjbehnnggbmibmdcdnfekjmobohlf');
          $('.instruction.chrome').removeClass('hidden');
          mixpanel.track('cli-install', { type: 'chrome' });
        }
        else if(navigator.userAgent.toLowerCase().indexOf('safari') !== -1) {
          window.location = '/extensions/l1.safariextz';
          $('.instruction.safari').removeClass('hidden');
          mixpanel.track('cli-install', { type: 'safari' });
        }
        else if(navigator.userAgent.toLowerCase().indexOf('firefox') !== -1) {
          window.open('https://addons.mozilla.org/en-US/firefox/addon/1-line/');
          $('.instruction.firefox').removeClass('hidden');
          mixpanel.track('cli-install', { type: 'firefox' });
        }
        else {
          $('.instruction.unknown').removeClass('hidden');
          mixpanel.track('cli-unknown');
        }
        $('.signature .call').addClass('disabled');
      });
    });
    </script>




    
